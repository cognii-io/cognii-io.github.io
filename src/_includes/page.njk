{% extends "base.njk" %}


{% block content %}
    <div class="mx-auto max-w-2xl pt-32 lg:pt-48 text-center">
        <p class="text-md/7 font-semibold text-pink-600 pb-2">{{ pre }}</p>
        <h1 class="mt-2 text-pretty text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl lg:text-balance">{{ headline }}</h1>
        <p class="mt-6 text-lg/8 text-gray-600">{{ lead }}</p>
    </div>
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto mt-8 mb-16 max-w-2xl sm:mt-10 lg:mt-12 lg:max-w-4xl">
            
                {{ content
                | replace("<h2>", '<h2 class="mt-8 text-pretty text-2xl font-semibold tracking-tight text-gray-900 sm:text-3xl lg:text-balance">')
                | replace("<p>", '<p class="mt-4 text-base/7 text-gray-600">')
                | replace("<blockquote>", '<blockquote class="font-semibold border-l-4 border-l-pink-500">') 
                | replace("<figcaption>", '<figcaption class="mt-2 text-base/7 text-gray-600">')
                | safe }}

            </div>
        </div>
    </div>
{% endblock %}
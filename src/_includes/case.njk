{% extends "base.njk" %}

{% block content %}
    <main class="bg-white pt-36">
        <article class="mx-auto max-w-7xl px-6 lg:px-8">
            <header class="mx-auto max-w-2xl lg:max-w-4xl text-center">
                <figure>
                    <img class="mx-auto max-w-md h-auto max-h-24 w-full object-contain" src="/img/{{ page.fileSlug }}.svg" alt="{{ client }} neurotesting case" />
                </figure>
                <h1 class="mt-6 text-pretty text-3xl font-semibold tracking-tight text-gray-900 sm:text-4xl lg:text-balance">Use case: {{ client }} â€” {{ headline }}</h1>
                <p class="mt-8 text-pretty text-lg font-medium text-gray-500 sm:text-xl/8">{{ lead }}</p>
            </header>

            <div class="mx-auto mt-8 max-w-2xl sm:mt-10 lg:mt-12 lg:max-w-4xl">
                {{ content 
                | replace("<h2>", '<h2 class="mt-8 text-pretty text-2xl font-semibold tracking-tight text-gray-900 sm:text-3xl lg:text-balance">')
                | replace("<h3>", '<h3 class="font-semibold text-lg pt-6 text-gray-900">')
                | replace("<p>", '<p class="mt-4 text-base/7 text-gray-600">') 
                | replace("<a", '<a class="text-pink-500 font-semibold inline-flex gap-2" target="_blank"') 
                | replace("<img", '<img class="mx-auto h-auto w-auto object-contain"') 
                | safe }}
            </div>
        </article>

    </main>
{% endblock %}
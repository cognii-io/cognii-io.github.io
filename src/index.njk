  <script>
const track = document.getElementById('carousel-track');
const prevButton = document.getElementById('prev-button');
const nextButton = document.getElementById('next-button');

let currentIndex = 0;
const totalSlides = {{ collections.cases.length }};

// Function to determine number of visible slides based on Tailwind breakpoints
function getVisibleSlides() {
    if (window.innerWidth >= 1024) { // lg breakpoint
        return 3;
    } else if (window.innerWidth >= 640) { // sm breakpoint
        return 2;
    }
    return 1; // default for smaller screens
}

let slidesVisible = getVisibleSlides();

function updateMaxIndex() {
    return totalSlides - slidesVisible;
}

let maxIndex = updateMaxIndex();

function updateCarousel() {
    const translateX = -(currentIndex * (100 / slidesVisible));
    track.style.transform = `translateX(${translateX}%)`;
}

// Add debounced resize handler to prevent too many updates
let resizeTimeout;
window.addEventListener('resize', () => {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(() => {
        const newSlidesVisible = getVisibleSlides();
        if (newSlidesVisible !== slidesVisible) {
            slidesVisible = newSlidesVisible;
            maxIndex = updateMaxIndex();
            // Adjust currentIndex if it's now out of bounds
            currentIndex = Math.min(currentIndex, maxIndex);
            updateCarousel();
        }
    }, 100);
});

prevButton.addEventListener('click', () => {
    currentIndex = currentIndex === 0 ? maxIndex : currentIndex - 1;
    updateCarousel();
});

nextButton.addEventListener('click', () => {
    currentIndex = currentIndex === maxIndex ? 0 : currentIndex + 1;
    updateCarousel();
});

// Initial setup
updateCarousel();
  </script>
